// RAZEN Basic Test Script with New Features

// Variable declarations
let num = 42
take message = "Hello, RAZEN!"
hold isActive = true

// Using math functions
let result = plus(num, 10)
let squared = power(num, 2)

// Control flow
if isActive {
  show message
  show "Number is active: " + num
}

// Try-catch block
try {
  let x = 10 / 0
} catch {
  show "Error caught: Division by zero"
} finally {
  show "Execution completed"
}

// For loop with break
for i in range(1, 5) {
  if i == 3 {
    break
  }
  show i
}

// Function declaration
fun calculateArea(let width, let height) {
  return times(width, height)
}

// Function call
let area = calculateArea(5, 10)
show "The area is: " + area 
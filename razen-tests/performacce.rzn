bool isTrue = true;               # Boolean true
bool isFalse = false;             # Boolean false
bool comparison = 5 > 3;          # Comparison (true)
bool logicalAnd = true && false;  # Logical AND (false)
bool logicalOr = true || false;   # Logical OR (true)
bool logicalNot = !true;  

show "Boolean variables with 'bool':";
if (isTrue) {
    show "isTrue is true";
} else {
    show "isTrue is false";
}
if (isFalse) {
    show "isFalse is false";
} else {
    show "isFalse is true";
}
if (comparison) {
    show "comparison is true";
} else {
    show "comparison is false";
}
if (logicalAnd) {
    show "logicalAnd is true";
} else {
    show "logicalAnd is false";
}
if (logicalOr) {
    show "logicalOr is true";
} else {
    show "logicalOr is false";
}
if (logicalNot) {
    show "logicalNot is true";
} else {
    show "logicalNot is false";
}


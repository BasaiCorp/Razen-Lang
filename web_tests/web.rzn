type web;

webpage {
    top {
        pagetitle "Razen Web Example";
        info charset="utf-8";
        info name="viewport" content="width=device-width, initial-scale=1.0";
        resource rel="stylesheet" href="styles.css";
        logic src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js";
    }
    
    bottom {
        topbar {
            h1 "Welcome to Razen Web";
            menu {
                bulletlist {
                    item { a href="/" "Home" }
                    item { a href="/about" "About" }
                    item { a href="/contact" "Contact" }
                }
            }
        }
        
        content {
            block id="intro" {
                h2 "Introduction";
                p "This is a demonstration of Razen's direct web compilation capabilities.";
                
                button id="clickMe" type="btn btn-primary" {
                    "Click Me!"
                }
            }
            
            block id="counter" {
                h2 "Counter Example";
                p "Count: " word id="count" { "0" }
                button id="increment" type="btn btn-success" { "Increment" }
                button id="decrement" type="btn btn-danger" { "Decrement" }
            }
        }
        
        bottombar {
            p "Â© 2025 Razen Programming Language";
        }
        
        logic {
            take count = 0;
            
            find clickMe {
                when click {
                    show "Button clicked!";
                }
            }
            
            find increment {
                when click {
                    let count = count + 1;
                    find count {
                        write content = count;
                    }
                }
            }
            
            find decrement {
                when click {
                    let count = count - 1;
                    find count {
                        write content = count;
                    }
                }
            }
            
            request "/api/data" {
                success: {
                    take data = response;
                    show data;
                },
                error: {
                    show "Failed to load data";
                }
            }
        }
    }
}
# Simple Razen Function Tests

# Basic math operations test
show "Testing basic math operations:";
show "5 + 3 = " + (5 + 3);
show "10 - 5 = " + (10 - 5);
show "6 * 7 = " + (6 * 7);
show "20 / 5 = " + (20 / 5);

# Simple function test
fun add(a, b) {
    return a + b;
}

fun subtract(a, b) {
    return a - b;
}

fun multiply(a, b) {
    return a * b;
}

fun divide(a, b) {
    if (b == 0) {
        show "Error: Division by zero";
        return 0;
    }
    return a / b;
}

# Testing simple functions
show "\nTesting simple functions:";
show "add(5, 3) = " + add(5, 3);
show "subtract(10, 5) = " + subtract(10, 5);
show "multiply(6, 7) = " + multiply(6, 7);
show "divide(20, 5) = " + divide(20, 5);

# Conditional logic test
show "\nTesting conditional logic:";
let a = 10;
let b = 5;

if (a > b) {
    show a + " is greater than " + b;
}

if (a < b) {
    show a + " is less than " + b;
}


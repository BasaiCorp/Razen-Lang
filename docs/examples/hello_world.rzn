# Hello World Example in Razen
# This is the simplest Razen program

# The 'show' keyword displays output to the console
show "Hello, World!";

# You can also use variables
take message = "Hello from Razen!";
show message;

# String concatenation
take name = "User";
show "Welcome, " + name + "!";

# String interpolation
show "Current time: ${system.time()}";

# Multiple values can be shown at once
show "Razen", "is", "awesome!";
